<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- 상단 바 -->
    <TextView
        android:id="@+id/writeReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="커뮤니티"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center" />

    <View
        android:id="@+id/divideRectangleBarOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bar_rectangle" />

    <!-- 스크롤 가능한 본문 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 상단 게시판 버튼들 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/popularPost"
                    android:layout_width="96dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_community_main_rect"
                    android:gravity="center"
                    android:text="인기 게시판"
                    android:textColor="#2B2B2B"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:id="@+id/freePost"
                    android:layout_width="96dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_community_main_rect_gray"
                    android:gravity="center"
                    android:text="자유 게시판"
                    android:textColor="#A1A9AD"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp" />

                <TextView
                    android:id="@+id/cookPost"
                    android:layout_width="96dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_community_main_rect_gray"
                    android:gravity="center"
                    android:text="요리 게시판"
                    android:textColor="#A1A9AD"
                    android:textSize="13sp"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

            <!-- 게시판 영역 / 이미지 포함 박스 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ic_community_main_post_rect">

                <GridLayout
                    android:id="@+id/popularGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"/>
                <GridLayout
                    android:id="@+id/freeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
                <GridLayout
                    android:id="@+id/cookGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bar_rectangle" />

            <!-- 인기 게시물 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인기 게시물"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 10"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#35A825"
                    android:layout_marginStart="5dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false">

                <GridLayout
                    android:id="@+id/categoryGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="50dp"/>
            </HorizontalScrollView>
            <!-- 구분선, 글쓰기 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="-30dp">

                <!-- 구분선 -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bar_rectangle" />

                <!-- 글쓰기 버튼 -->
                <ImageView
                    android:id="@+id/postWrite"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_write"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- 어떤 레시피가 맛있을까? 영역 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- 어떤 레시피가 맛있을까? -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="어떤 레시피가 맛있을까?"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 더보기 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/cookAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:textSize="14sp"
                        android:textColor="#9B9B9B" />
                </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <GridLayout
                android:id="@+id/categoryGroupTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp" />
            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bar_rectangle" />

            <!-- HOT 게시물 영역 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <!-- HOT 게시물 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HOT 게시물"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 더보기 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:id="@+id/hotAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="더보기"
                            android:textSize="14sp"
                            android:textColor="#9B9B9B" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <GridLayout
                android:id="@+id/categoryGroupThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="70dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
