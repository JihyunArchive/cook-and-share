<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 상단 바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="13dp">

                <TextView
                    android:id="@+id/fridgeMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- 검색 아이콘 -->
                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="검색 아이콘"
                    android:layout_marginLeft="260dp" />

                <!-- 사람 아이콘 -->
                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="사람 아이콘"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_marginRight="8dp"> <!-- 나란히 배치하기 위해 간격 추가 -->

                <!-- 내 위치 + 화살표 아이콘 -->
                <LinearLayout
                    android:id="@+id/myLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">

                    <!-- 내 위치 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 위치"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <!-- 화살표 아이콘 -->
                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="위치 아이콘"
                        android:layout_marginStart="0dp" />
                </LinearLayout>

                <!-- 첫 번째 거리순 컨테이너 (재료) -->
                <LinearLayout
                    android:id="@+id/materialFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_rectangle_background"
                    android:padding="4dp"
                    android:gravity="center"
                    android:strokeColor="#D2D5D6"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="170dp">

                    <!-- 재료 텍스트 -->
                    <TextView
                        android:id="@+id/materialText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:layout_marginEnd="4dp" />

                    <!-- 화살표 아이콘 -->
                    <ImageView
                        android:id="@+id/materialIcon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="재료 아이콘"
                        app:tint="#8A8F9C" />
                </LinearLayout>

                <!-- 두 번째 거리순 컨테이너 (거리) -->
                <LinearLayout
                    android:id="@+id/distanceFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_rectangle_background"
                    android:padding="4dp"
                    android:gravity="center"
                    android:strokeColor="#D2D5D6">

                    <!-- 거리 텍스트 -->
                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:layout_marginEnd="4dp" />

                    <!-- 화살표 아이콘 -->
                    <ImageView
                        android:id="@+id/distanceIcon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="거리 아이콘"
                        app:tint="#8A8F9C" />
                </LinearLayout>
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F6F7"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- 검색 결과 개수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/totalResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 100개 검색결과"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="240dp">

                    <!-- 거리순 텍스트 -->
                    <TextView
                        android:id="@+id/w"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거리순"
                        android:textSize="10sp"
                        android:textColor="#2B2B2B"/>

                    <!-- 화살표 -->
                    <ImageView
                        android:id="@+id/sortArrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="거리순 화살표"
                        app:tint="#2B2B2B" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <!-- 사진, 제목 및 정보 그룹 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="18dp">

                    <!-- 사진 -->
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/img_kitchen1"
                        android:contentDescription="아이템 사진"
                        android:layout_marginEnd="8dp" />

                    <!-- 제목 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/itemTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="다이소 채소 다지기 팝니다"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginRight="130dp"/>

                            <ImageView
                                android:id="@+id/itemMore"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_more"
                                android:contentDescription="더보기 아이콘"
                                android:layout_marginEnd="4dp" />
                        </LinearLayout>


                        <!-- 거리 아이콘, 거리 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/distanceIcon1"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_location"
                                android:contentDescription="거리 아이콘"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/distanceText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500m | 1.06km"
                                android:textSize="12sp"
                                android:textColor="#8A8A8A"/>
                        </LinearLayout>

                        <!-- 가격 및 댓글 그룹 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="8dp">

                            <TextView
                                android:id="@+id/itemPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="500P"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#35A825" />

                            <ImageView
                                android:id="@+id/commentIcon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_comment"
                                android:contentDescription="댓글 아이콘"
                                android:layout_marginEnd="4dp" />

                            <TextView
