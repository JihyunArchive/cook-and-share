<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/purchaseHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/myPurchaseBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기 아이콘"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/fridgeMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 동네재료 구매내역"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 프로필 아이템 1 -->
        <LinearLayout
            android:id="@+id/profileItemSeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_britta"
                    android:contentDescription="아이템 사진"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/itemTitle7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미개봉 브리타 팔아요"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginRight="117dp"/>

                        <ImageView
                            android:id="@+id/itemMore7"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_more"
                            android:contentDescription="더보기 아이콘" />
                    </LinearLayout>

                    <!-- 거리 아이콘, 게시 날짜 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/distanceIcon7"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            android:contentDescription="거리 아이콘"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/distanceTextEighteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500m"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>

                        <TextView
                            android:id="@+id/distanceTextNineteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/distanceTextTwenty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01.15"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <!-- 가격 및 댓글 그룹 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="30dp">

                        <TextView
                            android:id="@+id/itemPrice7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="800 P"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#35A825" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reviewWrite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background">

                <ImageView
                    android:id="@+id/arrowIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="아이콘"
                    app:tint="#8A8F9C"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="140dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기 작성하기"
                    android:textSize="13sp"
                    android:textColor="#8A8F9C"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <!-- 프로필 아이템 1 -->
        <LinearLayout
            android:id="@+id/profileItemEight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_plate"
                    android:contentDescription="아이템 사진"
                    android:layout_marginEnd="8dp" />

                <!-- 제목 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/itemTitle8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보타니아 접시 팔아요"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginRight="117dp"/>

                        <ImageView
                            android:id="@+id/itemMore8"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_more"
                            android:contentDescription="더보기 아이콘" />
                    </LinearLayout>

                    <!-- 거리 아이콘, 거리 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/distanceIcon8"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            android:contentDescription="거리 아이콘"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/distanceTextTwentyone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0km"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>

                        <TextView
                            android:id="@+id/distanceTextTwentytwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/distanceTextTwentythree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01.01"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <!-- 가격 및 댓글 그룹 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="30dp">

                        <TextView
                            android:id="@+id/itemPrice8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="6000 P"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#35A825" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reviewWriteTwo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background">

                <ImageView
                    android:id="@+id/arrowIcon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="아이콘"
                    app:tint="#8A8F9C"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="140dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기 작성하기"
                    android:textSize="13sp"
                    android:textColor="#8A8F9C"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
