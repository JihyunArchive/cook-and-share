<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/saleHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/mySalesBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기 아이콘"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="15dp" />

            <!-- 동네재료 타인 프로필 헤더 -->
            <TextView
                android:id="@+id/materialSaleHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 동네재료 판매내역"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 필터 탭 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전체"
                android:textColor="#35A825"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/deal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="거래중"
                android:textColor="#B3B3B3"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/dealComplete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="거래완료"
                android:textColor="#B3B3B3"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- 구분선 (indicator) -->
        <View
            android:id="@+id/indicator"
            android:layout_width="138dp"
            android:layout_height="3dp"
            android:background="#35A825"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

        <!-- 판매내역 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saleHistoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />
    </LinearLayout>
</ScrollView>
