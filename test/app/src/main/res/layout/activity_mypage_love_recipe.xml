                            android:layout_marginStart="1dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 별점 + 작성자 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

