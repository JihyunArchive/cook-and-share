                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=")"
                            android:textSize="11sp"
                            android:textColor="#747474" />

                    </LinearLayout>

                    <!-- 동그라미 구분 -->
                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:background="@drawable/ic_radius"
