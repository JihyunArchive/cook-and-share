<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이포인트"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 보유 포인트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/pointOwnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동님의 보유 포인트"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/totalPointText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,358"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:textColor="#000000"
                android:layout_marginTop="13dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="13dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>

<!--회색범위-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:layout_marginTop="15dp">

    <!-- 필터 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- 전체 -->
        <LinearLayout
            android:id="@+id/all"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="3dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- 1주일 -->
        <LinearLayout
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="3dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1주일"
                android:textSize="12sp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <!-- 1개월 -->
        <LinearLayout
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개월"
                android:textSize="12sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 3개월 -->
        <LinearLayout
            android:id="@+id/thrMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개월"
                android:textSize="12sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 6개월 -->
        <LinearLayout
            android:id="@+id/sixMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6개월"
                android:textSize="12sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 1년 -->
        <LinearLayout
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1년"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 날짜 범위 -->
    <TextView
        android:id="@+id/dateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:text="2025-05-03 ~ 2025-05-10"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

        <!-- 필터링 -->
        <LinearLayout
            android:id="@+id/myPointfillter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="330dp">

            <!-- 필터링 텍스트 -->
            <TextView
                android:id="@+id/myPointfillterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"/>

            <!-- 드롭다운 아이콘 -->
            <ImageView
                android:id="@+id/myPointDropDownIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_dropdown"
                android:contentDescription="드롭다운 아이콘" />

        </LinearLayout>

    <!-- 내역 리스트 (임시 LinearLayout으로 구성) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/pointHistoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#666666"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPointHistory"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
</LinearLayout>