                    android:layout_height="80dp"
                    android:src="@drawable/img_recipe_shanghai_shrimp_risotto"
                    android:contentDescription="마라식 왕새우 리조또" />

                <!-- 레시피 설명 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="13dp" >

                    <!-- 요리명 + 찜 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 요리명 -->
                        <TextView
                            android:id="@+id/recipeText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="마라식 왕새우 리조또"
                            android:textSize="13sp"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/heartIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_heart_recipe_list"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginTop="1dp"
                            android:layout_marginStart="136dp"/>

                    </LinearLayout>

                    <!-- 난이도 + 시간 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- 난이도 아이콘 -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipe_level"
                                android:contentDescription="난이도 아이콘" />

                            <!-- 난이도 텍스트 -->
                            <TextView
                                android:id="@+id/recipelevel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="초급"
                                android:textSize="11sp"
                                android:textColor="#9B9B9B"
                                android:layout_marginStart="1dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="15dp">

                            <!-- 시간 아이콘 -->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_recipe_time"
                                android:contentDescription="시간 아이콘"
                                android:layout_marginTop="2dp"/>

                            <!-- 시간 텍스트 -->
                            <TextView
                                android:id="@+id/recipeTime2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35"
                                android:textSize="11sp"
                                android:textColor="#9B9B9B"
                                android:layout_marginStart="1dp"/>

                            <!-- 분 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="분"
                                android:textSize="11sp"
                                android:textColor="#9B9B9B" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 수정 | 삭제 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="1dp">

                        <!-- 수정 -->
                        <TextView
                            android:id="@+id/reviewEdit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수정"
                            android:textSize="11sp"
                            android:textColor="#AEB2BA" />

                        <!-- 구분선 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="11dp"
                            android:background="#D9D9D9"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="3dp"/>

                        <!-- 삭제 -->
                        <TextView
                            android:id="@+id/reviewDelete2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="삭제"
                            android:textSize="11sp"
                            android:textColor="#AEB2BA" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="13dp"/>

            <!-- 별점 + 작성자 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <!-- 별점 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 별점 아이콘 -->
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        android:contentDescription="별 아이콘"
                        android:layout_marginTop="2dp"/>

                    <!-- 별점 텍스트 -->
                    <TextView
                        android:id="@+id/recipeStarReview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textSize="11sp"
                        android:textColor="#454A52"
                        android:layout_marginStart="4dp"/>

