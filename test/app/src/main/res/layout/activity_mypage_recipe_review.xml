<?xml version="1.0" encoding="utf-8"?>

<!-- 마이페이지 - 레시피 리뷰 내역 -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" >

            <!-- 뒤로가기 버튼 -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_fridge"
                android:contentDescription="뒤로가기" />

            <!-- 레시피 리뷰 내역 텍스트 -->
            <TextView
                android:id="@+id/loveRecipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 리뷰 내역"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp" />

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F5F6F7"
            android:layout_marginBottom="15dp"/>

        <!-- 카테고리 (음식)-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp" > <!-- 나란히 배치하기 위해 간격 추가 -->

            <!-- 카테고리 컨테이너 ( 음식 전체 ) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct_ck"
                android:gravity="center">

                <!-- 전체 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (한식) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 한식 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한식"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (양식) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 양식 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="양식"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (일식) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 일식 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일식"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (중식) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 중식 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중식"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (채식) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 채식 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채식"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (간식) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 간식 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="간식"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (안주) -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 안주 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안주"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

            <!-- 카테고리 컨테이너 (밑반찬) -->
            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/btn_fridge_ct"
                android:gravity="center"
                android:layout_marginLeft="7dp">

                <!-- 밑반찬 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="밑반찬"
                    android:textSize="12sp"
                    android:textColor="#8A8F9C" />
            </LinearLayout>

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F5F6F7"
            android:layout_marginBottom="15dp"/>

        <!-- 갯수 + 필터링 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp">

            <!-- 총 몇개의 레시피-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 총 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="1dp" />

                <!-- 갯수 -->
                <TextView
                    android:id="@+id/fridgeRecipeResultNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="1dp" />

                <!-- 개의 작성한 레시피 리뷰 -->
