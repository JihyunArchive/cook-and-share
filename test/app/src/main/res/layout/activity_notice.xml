<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/deleteButtonsContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/noticeBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기 아이콘"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="300dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제" />
            </LinearLayout>

        </LinearLayout>

        <!-- 텍스트 레이아웃들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 전체 텍스트 -->
            <LinearLayout
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- 레시피 텍스트 -->
            <LinearLayout
                android:id="@+id/recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="4dp" />
            </LinearLayout>

            <!-- 냉장고 텍스트 -->
            <LinearLayout
                android:id="@+id/fridege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="4dp" />
            </LinearLayout>

            <!-- 동네재료 텍스트 -->
            <LinearLayout
                android:id="@+id/material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="4dp" />
            </LinearLayout>

            <!-- 커뮤니티 텍스트 -->
            <LinearLayout
                android:id="@+id/community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- 알림 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="772dp"
            android:background="@color/noice_back_color"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림1 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_bell"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_bell" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주문이 완료되었습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:34"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- 알림2 텍스트 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림2 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_chatt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_chatt" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="등록한 레시피에 리뷰가 등록되었습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:34"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- 알림3 텍스트 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림3 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_chatt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_chatt" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="작성한 게시글에 댓글이 등록되었습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:34"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- 알림4 텍스트 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림4 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_book"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_book" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="레시피가 등록되었습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01.18 17:00"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- 알림5 텍스트 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림5 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_book"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_book" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="레시피를 찜하였습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01.18 10:53"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- 알림6 텍스트 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림6 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_refrigerator"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/refrigerator" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="등록한 재료의 유통기한이 얼마 남지 않았습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01.18 12:34"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- 알림7 텍스트 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:tag="rounded">

                <!-- 알림7 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <ImageView
                        android:tag="ic_chatt"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_chatt" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="채팅이 도착하였습니다." />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01.17 11:12"
                            android:textColor="#8A8F9C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 체크 아이콘 (기본은 gone) -->
                <ImageView
                    android:tag="checkIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_no_check"
                    android:visibility="gone"/>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/roundedContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>

    <!-- 삭제 버튼 -->
    <LinearLayout
        android:id="@+id/deleteButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/deleteAllBtn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="전체삭제"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/deleteSelectedBtn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="선택삭제" />
    </LinearLayout>

</RelativeLayout>
