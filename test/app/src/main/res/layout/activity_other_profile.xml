<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_fridge"
            android:contentDescription="뒤로가기" />

        <ImageView
            android:id="@+id/seachButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_search"
            android:layout_marginLeft="310dp"
            android:contentDescription="검색" />
    </LinearLayout>

    <!-- 프로필 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@drawable/ic_cicrle_profile"
            android:contentDescription="프로필 사진" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/followersLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로우 "
                    android:textSize="14sp"
                    android:textColor="#8A8A8A"/>

                <TextView
                    android:id="@+id/followersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,890명"
                    android:textSize="14sp"
                    android:textColor="#8A8A8A"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피"
                    android:textSize="14sp"
                    android:textColor="#8A8A8A"/>

                <TextView
                    android:id="@+id/recipeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="312개"
                    android:textSize="14sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  동영상"
                    android:textSize="14sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginStart="6dp"/>

                <TextView
                    android:id="@+id/videoCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111개"
                    android:textSize="14sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 팔로우 버튼 -->
    <Button
        android:id="@+id/followButton"
        android:layout_width="352dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:text="팔로우"
        android:textSize="14sp"
        android:background="@drawable/btn_follow"
        android:textColor="@color/color_follow_text"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="20dp"/>


    <!-- 탭 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="#F0F0F0"/>

    <!-- 탭(레시피/동영상) -->
    <LinearLayout
        android:id="@+id/tabRow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/tabRecipe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="레시피"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tabVideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="동영상"
            android:textSize="16sp"
            android:textColor="#8A8A8A"/>
    </LinearLayout>

    <!-- 인디케이터 -->
    <View
        android:id="@+id/indicator"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="@color/black" />

    <!-- 컨텐츠 -->
    <FrameLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>
</LinearLayout>
