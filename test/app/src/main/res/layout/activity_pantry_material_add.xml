<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 본문 컨테이너: 상단~탭바 위까지 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 상단 타이틀/뒤로가기 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/refrigeratorTap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 뒤로가기 -->
                <ImageButton
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_lelft_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 재료 추가하기 -->
                <TextView
                    android:id="@+id/materialAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="재료 추가하기"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/backArrow"
                    app:layout_constraintTop_toTopOf="@id/backArrow"
                    app:layout_constraintBottom_toBottomOf="@id/backArrow"  />

                <!-- 구분바 -->
                <View
                    android:id="@+id/divideRectangleBarOne"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bar_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/backArrow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 메인 콘텐츠: 등록/검색/카테고리/리스트 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/refrigeratoMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/refrigeratorTap"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 영수증/사진 등록 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/registerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 등록하기 박스 -->
                <View
                    android:id="@+id/registerBox"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_fridge_green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 등록하기 텍스트 + 버튼을 묶는 컨테이너 -->
                <LinearLayout
                    android:id="@+id/registerContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/registerBox"
                    app:layout_constraintBottom_toBottomOf="@id/registerBox"
                    app:layout_constraintStart_toStartOf="@id/registerBox"
                    app:layout_constraintEnd_toEndOf="@id/registerBox">

                    <!-- 등록하기 텍스트 -->
                    <TextView
                        android:id="@+id/register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="영수증 또는 사진으로 등록"
                        android:textColor="#35A825"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <!-- 등록하기 더하기 -->
                    <ImageButton
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_plus_green"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 검색 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/registerLayout">

                <!-- 검색 박스 -->
                <View
                    android:id="@+id/searchBox"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_fridge_search"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 재료 검색하기 -->
                <EditText
                    android:id="@+id/materialSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="재료 검색하기"
                    android:textSize="13sp"
                    android:backgroundTint="#9B9B9B"
                    android:background="@null"
                    android:inputType="text"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="48dp"
                    app:layout_constraintStart_toStartOf="@id/searchBox"
                    app:layout_constraintEnd_toEndOf="@id/searchBox"
                    app:layout_constraintTop_toTopOf="@id/searchBox"
                    app:layout_constraintBottom_toBottomOf="@id/searchBox"/>

                <!-- 검색 아이콘 -->
                <ImageButton
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_search_fridge"
                    app:layout_constraintEnd_toEndOf="@id/searchBox"
                    app:layout_constraintTop_toTopOf="@id/searchBox"
                    app:layout_constraintBottom_toBottomOf="@id/searchBox"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 카테고리 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/searchLayout">

                <!-- 가로 스크롤 -->
                <HorizontalScrollView
                    android:id="@+id/categoryScroll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:id="@+id/categoryButtonContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 전체 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/total"
                            android:layout_width="55dp"
                            android:layout_height="27dp"
                            android:text="전체"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/btn_fridge_ct_ck"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 채소류 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/vegetable"
                            android:layout_width="67dp"
                            android:layout_height="27dp"
                            android:text="채소류"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 육류 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/meat"
                            android:layout_width="55dp"
                            android:layout_height="27dp"
                            android:text="육류"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 해산물 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seafood"
                            android:layout_width="67dp"
                            android:layout_height="27dp"
                            android:text="해산물"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 곡류 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/grain"
                            android:layout_width="55dp"
                            android:layout_height="27dp"
                            android:text="곡류"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 과일류 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/fruits"
                            android:layout_width="67dp"
                            android:layout_height="27dp"
                            android:text="과일류"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 유제품 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/dairyProduct"
                            android:layout_width="67dp"
                            android:layout_height="27dp"
                            android:text="유제품"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 양념류 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/season"
                            android:layout_width="67dp"
                            android:layout_height="27dp"
                            android:text="양념류"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 가공식품 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/processedFood"
                            android:layout_width="75dp"
                            android:layout_height="27dp"
                            android:text="가공식품"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 면류 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/noodle"
                            android:layout_width="55dp"
                            android:layout_height="27dp"
                            android:text="면류"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                        <!-- 기타 -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/etc"
                            android:layout_width="55dp"
                            android:layout_height="27dp"
                            android:text="기타"
                            android:textSize="12sp"
                            android:textColor="#8A8F9C"
                            android:background="@drawable/btn_recipe_add"
                            android:stateListAnimator="@null"
                            android:layout_marginEnd="6dp" />

                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 재료 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/category"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="12dp"
                android:clipToPadding="false"
                android:elevation="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 탭바 전체 배경 -->
    <FrameLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 탭바 배경 이미지 -->
        <ImageView
            android:id="@+id/mainTapBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bar_tap_bg"
            android:scaleType="fitXY" />

        <!-- 탭바 버튼 그룹 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <!-- 동네주방 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapVillageKitchenIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_village_kitchen" />

                <TextView
                    android:id="@+id/tapVillageKitchenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- 레시피 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapRecipeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_recipe"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/tapRecipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- 홈 탭 -->
            <LinearLayout
                android:id="@+id/tapHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapHomeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <!-- 커뮤니티 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapCommunityIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community" />

                <TextView
                    android:id="@+id/tapCommunityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 냉장고 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapFridgeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_refrigerator"
                    app:tint="#2B2B2B"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/tapFridgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고"
                    android:textColor="#2B2B2B"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
