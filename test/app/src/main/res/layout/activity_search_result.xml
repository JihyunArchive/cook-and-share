<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchResultActivity">

    <!-- 뒤로가기 -->
    <ImageButton
        android:id="@+id/SearchResultBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_lelft_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchRect"
        app:layout_constraintBottom_toBottomOf="@id/searchRect" />

    <!-- 검색 박스 -->
    <View
        android:id="@+id/searchRect"
        android:layout_width="286dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_search_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 검색어 입력 -->
    <EditText
        android:id="@+id/writeSearchTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:background="@android:color/transparent"
        android:hint="검색어를 입력해주세요"
        android:textColor="#9B9B9B"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/searchRect"
        app:layout_constraintStart_toStartOf="@id/searchRect"
        app:layout_constraintTop_toTopOf="@id/searchRect" />

    <!-- 검색 버튼 -->
    <ImageButton
        android:id="@+id/searchIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/SearchResultBackIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/SearchResultBackIcon" />

    <!-- 탭 텍스트 -->
    <TextView
        android:id="@+id/totalTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="21dp"
        android:text="전체"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchRect" />

    <TextView
        android:id="@+id/recipeTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="레시피"
        android:textColor="#8A8A8A"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/totalTap"
        app:layout_constraintTop_toTopOf="@id/totalTap" />

    <TextView
        android:id="@+id/videoTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="동영상"
        android:textColor="#8A8A8A"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/recipeTap"
        app:layout_constraintTop_toTopOf="@id/totalTap" />

    <!-- 구분 바 -->
    <View
        android:id="@+id/divideRectangleBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/totalTap" />

    <!-- 인디케이터 바 -->
    <View
        android:id="@+id/indicatorBar"
        android:layout_width="47dp"
        android:layout_height="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/bar_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalTap" />
    <!-- 카테고리 스크롤 -->
    <HorizontalScrollView
        android:id="@+id/categoryScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBar">

        <LinearLayout
            android:id="@+id/categoryButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/allBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="전체"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/krBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="한식"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/wsBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="양식"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/jpBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="일식"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cnBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="중식"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vgBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="채식"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/snBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="간식"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/asBtn"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="안주"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sdBtn"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_recipe_add"
                android:stateListAnimator="@null"
                android:text="밑반찬"
                android:textColor="#8A8F9C"
                android:textSize="11sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 헤더(총 n개, 정렬 선택) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoryScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="17dp"
            android:text="총"
            android:textColor="#2B2B2B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="0"
            android:textColor="#35A825"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/total"
            app:layout_constraintTop_toTopOf="@id/total" />

        <TextView
            android:id="@+id/searchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="개 검색결과"
            android:textColor="#2B2B2B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/number"
            app:layout_constraintTop_toTopOf="@id/total" />

        <TextView
            android:id="@+id/elementaryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:text="조회수순"
            android:textColor="#2B2B2B"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/dowArrow"
            app:layout_constraintTop_toTopOf="@id/total"/>

        <ImageButton
            android:id="@+id/dowArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/elementaryLevel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 전체 탭 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTotal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerArea"
        app:layout_constraintBottom_toTopOf="@id/bottomBarArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 레시피 탭 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecipesOnly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerArea"
        app:layout_constraintBottom_toTopOf="@id/bottomBarArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 쇼츠 탭 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShortsOnly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerArea"
        app:layout_constraintBottom_toTopOf="@id/bottomBarArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 빈 화면 (단일 정의만 유지) -->
    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerArea"
        app:layout_constraintBottom_toTopOf="@id/bottomBarArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/searchEmptyImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/image_search_no_search"/>

        <TextView
            android:id="@+id/searchEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당되는 결과가 없습니다"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- 탭바 전체 배경 -->
    <FrameLayout
        android:id="@+id/bottomBarArea"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 탭바 배경 이미지 -->
        <ImageView
            android:id="@+id/mainTapBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bar_tap_bg"
            android:scaleType="fitXY" />

        <!-- 탭바 버튼 그룹 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <!-- 동네주방 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapVillageKitchenIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_village_kitchen" />

                <TextView
                    android:id="@+id/tapVillageKitchenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- 레시피 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapRecipeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_recipe"
                    app:tint="#2B2B2B"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/tapRecipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피"
                    android:textColor="#2B2B2B"
                    android:textSize="10sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- 홈 탭 -->
            <LinearLayout
                android:id="@+id/tapHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapHomeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <!-- 커뮤니티 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapCommunityIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community" />

                <TextView
                    android:id="@+id/tapCommunityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 냉장고 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapFridgeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_refrigerator"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/tapFridgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
