<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 정렬 카테고리 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/latest"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/btn_fridge_ct_ck"
            android:gravity="center">

            <TextView
                android:id="@+id/latest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순"
                android:textSize="12sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popularity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/btn_fridge_ct"
            android:gravity="center"
            android:layout_marginLeft="7dp">

            <TextView
                android:id="@+id/popularity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기순"
                android:textSize="12sp"
                android:textColor="#8A8F9C" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/btn_fridge_ct"
            android:gravity="center"
            android:layout_marginLeft="7dp">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜순"
                android:textSize="12sp"
                android:textColor="#8A8F9C" />
        </LinearLayout>
    </LinearLayout>

    <!-- 3열 그리드: 바깥 여백을 위해 좌우 패딩 살짝 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>
</LinearLayout>
