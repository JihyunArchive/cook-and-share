<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="30dp"
    android:background="@color/white"
    android:layout_marginEnd="30dp">

    <!-- ✅ 사각형 바깥쪽에 위치한 날짜 -->
    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.05.21"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp" />

    <!-- ✅ 사각형 박스 내부 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_fridge"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginBottom="10dp">

        <!-- 재료명 + 수량 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 재료명 -->
            <TextView
                android:id="@+id/ingredientNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="계란"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- 수량 표시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amountSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#409CFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#409CFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개"
                    android:textColor="#409CFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 구매일자 -->
        <TextView
            android:id="@+id/purchaseDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매일자 : 2025.05.20"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
