<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_rectangle_fridge"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:gravity="center_vertical"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 재료명 -->
            <TextView
                android:id="@+id/fridgeIngredientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소세지"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#454A52" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <!-- 수량 -->
                <TextView
                    android:id="@+id/fridgeIngredientQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#454A52" />

                <!-- 단위 -->
                <TextView
                    android:id="@+id/fridgeIngredientUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#454A52"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 구매일자 또는 유통기한 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/fridgeIngredientDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매일자 : "
                android:textSize="11sp"
                android:textColor="#747474" />

            <TextView
                android:id="@+id/fridgeIngredientDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.04.26"
                android:textSize="11sp"
                android:textColor="#747474" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
