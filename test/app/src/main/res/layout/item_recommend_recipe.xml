<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="10dp">

    <!-- 요리 이미지 -->
    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_review_list_food" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <!-- 요리 제목 -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소세지김치볶음밥"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- 난이도 + 시간 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <!-- 난이도 아이콘 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_recipe_level"/>

            <TextView
                android:id="@+id/recipeDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초급"
                android:textSize="11sp"
                android:textColor="#9B9B9B"
                android:layout_marginStart="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · "
                android:textSize="12sp"
                android:textColor="#7A7A7A"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <!-- 시간 아이콘 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_recipe_time"
                android:contentDescription="시간 아이콘"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/recipeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30분"
                android:textSize="11sp"
                android:textColor="#9B9B9B"
                android:layout_marginStart="1dp"/>
        </LinearLayout>

        <!-- 별점 + 작성자 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/recipeRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.8"
                android:textSize="12sp"
                android:textColor="#FFA000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (23)"
                android:textSize="12sp"
                android:textColor="#7A7A7A"
                android:layout_marginStart="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · "
                android:textSize="12sp"
                android:textColor="#7A7A7A"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/recipeWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요리왕비룡"
                android:textSize="12sp"
                android:textColor="#4CAF50" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
