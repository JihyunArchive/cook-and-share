<!-- item_suggest_recipe.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RecipeRoundedImage" 
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- 하트 버튼 (이미지 위 오른쪽 아래) -->
    <ImageButton
        android:id="@+id/heartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_heart_list"
        app:layout_constraintBottom_toBottomOf="@id/img"
        app:layout_constraintEnd_toEndOf="@id/img"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textColor="#2B2B2B"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="@id/img" />

    <ImageView
        android:id="@+id/icLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/image_recently_stored_materials_step"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초급"
        android:textColor="#9B9B9B"
        android:textSize="11sp"
        app:layout_constraintTop_toTopOf="@id/icLevel"
        app:layout_constraintBottom_toBottomOf="@id/icLevel"
        app:layout_constraintStart_toEndOf="@id/icLevel" />

    <ImageView
        android:id="@+id/icTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_recently_stored_materials_time"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/level" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30분"
        android:textColor="#9B9B9B"
        android:textSize="11sp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/icTime"
        app:layout_constraintBottom_toBottomOf="@id/icTime"
        app:layout_constraintStart_toEndOf="@id/icTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
