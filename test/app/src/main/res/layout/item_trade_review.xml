<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="18dp">

    <!-- 사진 + 제목 정보 그룹 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- 거래 이미지 -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/image_plate"
            android:contentDescription="아이템 사진"
            android:layout_marginEnd="8dp"/>

        <!-- 제목/소제목/별점 묶음 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 제목 + 더보기 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="거래한 주방용품"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#8A8F9C" />

                <ImageView
                    android:id="@+id/itemMore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more"
                    android:contentDescription="더보기 아이콘"
                    android:layout_marginEnd="4dp"/>
            </LinearLayout>

            <!-- 소제목 -->
            <TextView
                android:id="@+id/itemSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미개봉 브리타 팔아요"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>

            <!-- 별점 + 날짜 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="17dp">

                <ImageView
                    android:id="@+id/starIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="별 아이콘"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/reviewRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0 |"
                    android:textColor="#8A8A8A"
                    android:textSize="11sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/reviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025.12.12"
                    android:textColor="#8A8A8A"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- 구매자 이름 + 직책 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/buyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그거살래요"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/buyerRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | 구매자"
            android:textSize="11sp"
            android:textColor="#8A8A8A"/>
    </LinearLayout>

    <!-- 후기 내용 -->
    <TextView
        android:id="@+id/reviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태 좋고 친절하세요^^ 좋은 거래 감사합니다!"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="20dp"/>
</LinearLayout>
