<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이포인트"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 보유 포인트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/pointOwnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동님의 보유 포인트"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/totalPointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,358P"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

<!--회색범위-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D9D9D9"
        android:layout_marginTop="15dp">

    <!-- 필터 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- 1주일 -->
        <LinearLayout
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="3dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1주일"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- 1개월 -->
        <LinearLayout
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개월"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginEnd="4dp" />
        </LinearLayout>

        <!-- 3개월 -->
        <LinearLayout
            android:id="@+id/thrMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3개월"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginEnd="4dp" />
        </LinearLayout>

        <!-- 6개월 -->
        <LinearLayout
            android:id="@+id/sixMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6개월"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginEnd="4dp" />
        </LinearLayout>

        <!-- 1년 -->
        <LinearLayout
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center"
            android:strokeColor="#D2D5D6"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1년"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginEnd="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 날짜 범위 -->
    <TextView
        android:id="@+id/dateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:text="2025-05-03 ~ 2025-05-10"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <!-- 내역 리스트 (임시 LinearLayout으로 구성) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/pointHistoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 필터링 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="345dp">

                <!-- 필터링 텍스트 -->
                <TextView
                    android:id="@+id/fridgeRecipefillterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="1dp"/>

                <!-- 드롭다운 아이콘 -->
                <ImageView
                    android:id="@+id/fridgeRecipeResultDropDownIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dropdown"
                    android:contentDescription="드롭다운 아이콘" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#666666"/>

        <LinearLayout
            android:id="@+id/pointback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 필터링 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 작성"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="30dp"/>

            <!-- 필터링 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50P+"
                android:textSize="17sp"
                android:layout_marginStart="240dp"
                android:textColor="#FF6961"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!-- 필터링 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-05-07 15:41:21"
                    android:textSize="11sp"
                    android:layout_marginTop="1dp"
                    android:textColor="#797979"
                    android:layout_marginLeft="30dp"/>

                <!-- 필터링 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="적립"
                    android:textSize="11sp"
                    android:layout_marginStart="215dp"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
        </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="냉장고 재료 입력"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="30dp"/>

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3P+"
                        android:textSize="17sp"
                        android:layout_marginStart="220dp"
                        android:textColor="#FF6961"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-05-07 09:06:01"
                        android:textSize="11sp"
                        android:layout_marginTop="1dp"
                        android:textColor="#797979"
                        android:layout_marginLeft="30dp"/>

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="적립"
                        android:textSize="11sp"
                        android:layout_marginStart="215dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동네주방 포인트 사용"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="30dp"/>

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3000P-"
                        android:textSize="17sp"
                        android:layout_marginStart="170dp"
                        android:textColor="#409CFF"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-05-06 18:06:01"
                        android:textSize="11sp"
                        android:layout_marginTop="1dp"
                        android:textColor="#797979"
                        android:layout_marginLeft="30dp"/>

                    <!-- 필터링 텍스트 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용"
                        android:textSize="11sp"
                        android:layout_marginStart="215dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
</LinearLayout>