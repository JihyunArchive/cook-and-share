<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 전체 레시피 -->
    <TextView
        android:id="@+id/totalRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="전체 레시피"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 레시피 작성 -->
    <ImageButton
        android:id="@+id/pencile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="73dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_pencile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 레시피 작성 -->
    <TextView
        android:id="@+id/recipeWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="3dp"
        android:text="레시피 작성"
        android:textColor="#545151"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/pencile"
        app:layout_constraintTop_toTopOf="@id/pencile" />

    <!-- 전체 -->
    <Button
        android:id="@+id/buyFixButton"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="전체"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="27dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 한식 -->
    <Button
        android:id="@+id/buyFixButtonTwo"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="한식"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButton" />

    <!-- 양식 -->
    <Button
        android:id="@+id/buyFixButtonThree"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="양식"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButtonTwo" />

    <!-- 일식 -->
    <Button
        android:id="@+id/buyFixButtonFour"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="일식"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButtonThree" />

    <!-- 중식 -->
    <Button
        android:id="@+id/buyFixButtonFive"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="중식"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButtonFour" />

    <!-- 채식 -->
    <Button
        android:id="@+id/buyFixButtonSix"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="채식"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButtonFive" />

    <!-- 간식 -->
    <Button
        android:id="@+id/buyFixButtonSeven"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="간식"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButtonSix" />

    <!-- 안주 -->
    <Button
        android:id="@+id/buyFixButtonEight"
        android:layout_width="47dp"
        android:layout_height="21dp"
        android:text="안주"
        android:textSize="13sp"
        android:textColor="#8A8F9C"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toBottomOf="@id/totalRecipe"
        app:layout_constraintStart_toEndOf="@id/buyFixButtonSeven" />

    <!-- 검색바 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarOne"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toBottomOf="@id/buyFixButton" />

    <ScrollView
        android:id="@+id/activityMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="107dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

             <!-- 총 -->
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="35dp"
                android:text="총"
                android:textColor="#2B2B2B"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 150 -->
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="35dp"
                android:text="150"
                android:textColor="#35A825"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/total"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 개 검색결과 -->
            <TextView
                android:id="@+id/searchResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="35dp"
                android:text="개 검색결과"
                android:textColor="#2B2B2B"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/number"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 조회수순 -->
            <TextView
                android:id="@+id/elementaryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="4dp"
                android:text="조회수순"
                android:textColor="#2B2B2B"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/dowArrow"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 드롭다운 -->
            <ImageButton
                android:id="@+id/dowArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- 동네재료 HOT 거래글 리스트 -->
            <include
                android:id="@+id/local_material_hot_trading_post"
                layout="@layout/search_result_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>