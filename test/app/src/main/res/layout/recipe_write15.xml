<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 뒤로가기 -->
    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_lelft_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 레시피 작성 -->
    <TextView
        android:id="@+id/writeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="레시피 작성"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 레시피 작성 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toTopOf="@id/writeReview" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:text="타이틀"
        android:textColor="#2B2B2B"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne"/>

    <!-- 타이틀 아래 바 -->
    <View
        android:id="@+id/divideRectangleBarTewleve"
        android:layout_width="47dp"
        android:layout_height="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/bar_recipe"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 재료 -->
    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:text="재료"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne"/>

    <!-- 대체재료 -->
    <TextView
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:text="대체재료"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne"/>

    <!-- 처리방법 -->
    <TextView
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:text="처리방법"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne"/>

    <!-- 조리영상 -->
    <TextView
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:text="조리영상"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne"/>

    <!-- 세부설정 -->
    <TextView
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="23dp"
        android:text="세부설정"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne"/>

    <!-- 카테고리 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarTen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toBottomOf="@id/one" />

    <!-- 레시피의 -->
    <TextView
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="23dp"
        android:text="레시피의"
        android:textColor="#2B2B2B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarTen" />

    <!-- 카테고리와 제목을 입력해주세요 -->
    <TextView
        android:id="@+id/categoryTitleWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:text="카테고리와 제목을 입력해주세요"
        android:textColor="#2B2B2B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe"/>

    <!-- 카테고리 -->
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginStart="41dp"
        android:text="카테고리"
        android:textColor="#2B2B2B"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryTitleWrite" />

    <!-- 한식 -->
    <TextView
        android:id="@+id/koreanFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="15dp"
        android:text="한식"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/dowArrow"
        app:layout_constraintTop_toBottomOf="@id/categoryTitleWrite" />

    <!-- 4 아래 바 -->
    <View
        android:id="@+id/divideRectangleBarTwo"
        android:layout_width="43dp"
        android:layout_height="1dp"
        android:background="@drawable/bar_number_of_people"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/koreanFood"/>

    <!-- 드롭다운 -->
    <ImageButton
        android:id="@+id/dowArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="41dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryTitleWrite"/>

    <!-- 레시피 제목 -->
    <TextView
        android:id="@+id/recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="41dp"
        android:text="레시피 제목"
        android:textColor="#2B2B2B"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category" />

    <!-- 레시피 제목을 입력해주세요 -->
    <EditText
        android:id="@+id/recipeTitleWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="레시피 제목을 입력해주세요"
        android:textSize="13sp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#A1A9AD"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="@id/divideRectangleBarThree"
        app:layout_constraintTop_toTopOf="@id/recipeTitle"/>

    <!-- 레시피 제목을 입력해주세요 아래 바 -->
    <View
        android:id="@+id/divideRectangleBarThree"
        android:layout_width="165dp"
        android:layout_height="1dp"
        android:background="@drawable/bar_number_of_people"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@id/dowArrow"
        app:layout_constraintTop_toTopOf="@id/recipeTitleWrite"/>

    <ImageView
        android:id="@+id/tapFixBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/bar_tap_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 이전으로 -->
    <Button
        android:id="@+id/skipFixButton"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:text="이전으로"
        android:textSize="13sp"
        android:textColor="#9B9B9B"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="@id/tapFixBar"
        app:layout_constraintBottom_toBottomOf="@id/tapFixBar"
        app:layout_constraintStart_toStartOf="@id/tapFixBar" />

    <!-- 계속하기 -->
    <Button
        android:id="@+id/nextFixButton"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:text="계속하기"
        android:textSize="14sp"
        android:textColor="#A1A9AD"
        android:textStyle="bold"
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toTopOf="@id/tapFixBar"
        app:layout_constraintBottom_toBottomOf="@id/tapFixBar"
        app:layout_constraintEnd_toEndOf="@id/tapFixBar" />


</androidx.constraintlayout.widget.ConstraintLayout>