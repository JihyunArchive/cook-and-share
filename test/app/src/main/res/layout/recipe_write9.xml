<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 뒤로가기 -->
    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_lelft_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 레시피 작성 -->
    <TextView
        android:id="@+id/writeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="레시피 작성"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 리뷰 작성 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toTopOf="@id/writeReview" />

    <!-- 이미지 -->
    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="18dp"
        android:text="이미지"
        android:textColor="#A1A9AD"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne" />

    <!-- 동영상 -->
    <TextView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        android:layout_marginTop="18dp"
        android:text="동영상"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne" />

    <!-- 동영상 아래 바 -->
    <View
        android:id="@+id/divideRectangleBarThirteen"
        android:layout_width="206dp"
        android:layout_height="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bar_recipe"
        app:layout_constraintTop_toBottomOf="@id/video"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 리뷰 작성 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarNine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <!-- STEP 1 -->
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="STEP 1"
        android:textColor="#2B2B2B"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarNine" />

    <!-- STEP 1 아래 바 -->
    <View
        android:id="@+id/divideRectangleBarTewleve"
        android:layout_width="59dp"
        android:layout_height="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/bar_recipe"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- STEP 2 -->
    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="29dp"
        android:text="STEP 2"
        android:textColor="#A1A9AD"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarNine" />

    <!-- STEP 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarTen"
        android:layout_width="117dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 채식 -->
    <TextView
        android:id="@+id/koreanFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        android:text="채식"
        android:textColor="#2B2B2B"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divideRectangleBarTen" />

    <!-- 그릴드 벨 페퍼 샌드위치의 -->
    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="3dp"
        android:text="그릴드 벨 페퍼 샌드위치의"
        android:textColor="#2B2B2B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/koreanFood" />

    <!-- 레시피 동영상 -->
    <TextView
        android:id="@+id/recipeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="3dp"
        android:text="레시피 동영상"
        android:textColor="#35A825"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodName" />

    <!-- 을 업로드해주세요 -->
    <TextView
        android:id="@+id/uproad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="을 업로드해주세요"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/recipeVideo"
        app:layout_constraintTop_toTopOf="@id/recipeVideo" />

    <!-- 동영상 업로드하기 -->
    <TextView
        android:id="@+id/uproadVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:text="동영상 업로드하기"
        android:textColor="#2B2B2B"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/recipeVideo"
        app:layout_constraintTop_toBottomOf="@id/recipeVideo" />

    <!-- 카메라 -->
    <ImageButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/uproadVideo" />

    <!-- 이전으로 -->
    <Button
        android:id="@+id/buyFixButton"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:text="이전으로"
        android:textSize="13sp"
        android:textColor="#9B9B9B"
        android:layout_marginTop="150dp"
        android:layout_marginStart="27dp"
        android:background="@drawable/btn_recipe_add"
        app:layout_constraintTop_toTopOf="@id/uproadVideo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 계속하기 -->
    <Button
        android:id="@+id/nextFixButton"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:text="계속하기"
        android:textSize="14sp"
        android:textColor="#A1A9AD"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/btn_number_of_people"
        app:layout_constraintTop_toTopOf="@id/uproadVideo"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>